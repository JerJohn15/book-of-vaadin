<!DOCTYPE t:templates [
<!ENTITY hsize0 "10pt">
<!ENTITY hsize1 "12pt">
<!ENTITY hsize2 "14.4pt">
<!ENTITY hsize3 "17.28pt">
<!ENTITY hsize4 "20.736pt">
<!ENTITY hsize5 "24.8832pt">
<!ENTITY hsize0space "7.5pt"> <!-- 0.75 * hsize0 -->
<!ENTITY hsize1space "9pt"> <!-- 0.75 * hsize1 -->
<!ENTITY hsize2space "10.8pt"> <!-- 0.75 * hsize2 -->
<!ENTITY hsize3space "12.96pt"> <!-- 0.75 * hsize3 -->
<!ENTITY hsize4space "15.552pt"> <!-- 0.75 * hsize4 -->
<!ENTITY hsize5space "18.6624pt"> <!-- 0.75 * hsize5 -->
]>
<t:templates xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
             xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
             xmlns:fo="http://www.w3.org/1999/XSL/Format"
             xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

	<t:titlepage t:element="book" t:wrapper="fo:block">
		<t:titlepage-content t:side="recto">
            <!-- The generated title template is actually overridden in custom-fo-docbook.xml. -->
			<title
				t:named-template="division.title"
				param:node="ancestor-or-self::book[1]"
				text-align="center"
				font-size="&hsize5;"
				margin-top="3cm"
				font-weight="bold"
				font-family="{$title.fontset}"/>

			<subtitle
                text-align="center"
                font-size="&hsize2;"
                space-before="0.5cm"
                font-family="{$title.fontset}"/>
			
			<volume
                text-align="center"
                font-size="&hsize1;"
                space-before="1.0cm"
                font-family="{$title.fontset}"/>

			<author
                space-before="2cm"
                font-weight="normal"/>

            <!-- edition
                font-weight="normal"/ -->
			<pubdate
                space-before="2cm"
                font-weight="normal"/>
			<corpauthor
                font-weight="normal"/>
		</t:titlepage-content>
		
		<t:titlepage-content t:side="verso">
			<title
				t:named-template="book.verso.title"
				font-size="&hsize1;"
				font-weight="bold"
				font-family="{$title.fontset}"/>

			<authorgroup t:named-template="verso.authorgroup"/>
			<author/>
			<corpauthor space-after="1em"/>

			<othercredit/>
            <edition space-before="1em"/>
			<pubdate/>
			<releaseinfo/>

            <websitenotice space-before="1em" />

			<publisher space-before="1em" space-after="1em"/>

			<abstract space-before="2em"/>

			<copyright space-before="2em"/>
			<legalnotice space-before="0em" space-after="0.5em"/>

			<printer space-before="1em" space-after="1em"/>

			<biblioid/>

		</t:titlepage-content>
		
		<t:titlepage-separator>
			<fo:block break-after="page"/>
		</t:titlepage-separator>
		
		<t:titlepage-before t:side="recto">
		</t:titlepage-before>
		
		<t:titlepage-before t:side="verso">
			<fo:block break-after="page"/>
		</t:titlepage-before>
	</t:titlepage>
</t:templates>

